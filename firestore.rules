rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Carts collection - users can only access their own cart
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Orders collection - users can only read their own orders
    match /orders/{orderId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Prevent updating or deleting orders after creation
      allow update, delete: if false;
    }

    // Products collection - read-only for all users
    match /products/{productId} {
      allow read: if true;
      // Only admins can write (you can add admin check later)
      allow write: if false;
    }
  }
}
